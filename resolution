#!/usr/bin/swift

import Darwin
import Cocoa
import Foundation

let stdout = FileHandle.standardOutput

let screens = NSScreen.screens

for screen in screens {
  let rect = screen.visibleFrame
  let emoji = screen == NSScreen.main ? "ðŸ–¥ " : "  ";
  stdout.write("\(emoji) \(Int(rect.size.width)) Ã— \(Int(rect.size.height)) (\(String(format:"%0.3f", rect.size.width / rect.size.height)))\n".data(using: String.Encoding.utf8)!)
}
